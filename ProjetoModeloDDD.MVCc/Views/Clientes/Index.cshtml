@model IEnumerable<ProjetoModeloDDD.MVC.ViewModels.ClienteViewModel>


@section Scripts {

    


    <script>

        $(function () {
            $(".details").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/Clientes/Details?id=" + id, function () {
                    $("#modal").modal();
                })
            })
        });

        $(".edit").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/Clientes/Edit?id=" + id, function () {
                $("#modal").modal();
            })
        });

        $(".delete").click(function () {
            var id = $(this).attr("data-id");
            $("#modal").load("/Clientes/Delete?id=" + id, function () {
                $("#modal").modal();
            })
        });

    </script>

}

